<header>
  <nav class="navbar navbar-expand-lg bg-dark">
    <div class="container">
      <%= link_to "Ruby Blog", root_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
         <% unless is_auth %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link text-white #{'active' if current_page?(root_path)}" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Articles", articles_path, class: "nav-link text-white #{'active' if current_page?(articles_path)}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link text-white #{'active' if current_page?(users_path)}" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link text-white #{'active' if current_page?(about_path)}" %>
          </li>
        </ul>
        <div class="d-flex">
          <div class="mx-3 d-flex gap-3">
            <% if is_auth %>
              <%= link_to "Create new", new_article_path, class: 'btn btn-primary' %>
              <%= link_to "Profile", user_path(current_user), class: 'btn btn-outline-primary' %>
              <%= link_to "Logout", logout_path, method: :delete, class: 'btn btn-outline-danger' %>
            <% else %>
              <%= link_to "Login", login_path, class: 'btn btn-primary' %>
              <%= link_to "Sign Up", signup_path, class: 'btn btn-primary' %>
            <% end %>
          </div>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div>
  </nav>
</header>