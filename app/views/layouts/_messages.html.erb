<% if flash.any? %>
  <div class="container">
    <% flash.each do |name, msg| %>
      <div class="alert alert-dismissible fade show my-3 <%= name == 'alert' ? 'alert-danger' : 'alert-success' %>" role="alert">
        <div>
          <%= msg %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>
<% end %>