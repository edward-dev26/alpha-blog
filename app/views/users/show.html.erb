<div class="container my-3 d-flex flex-column align-items-center">
  <div class="align-self-end mb-2">
    <%= link_to 'Edit profile', edit_user_path(@user), class: 'btn btn-outline-success' %>
  </div>
  <div class="mb-3 text-center">
    <h1><%= @user.username %>'s profile</h1>
    <p class="text-secondary-emphasis"><%= @user.email %></p>
  </div>
  <div class="d-flex justify-content-between mb-4">
    <%= avatar_for @user %>
  </div>

  <h3>Articles</h3>
  <%= render "articles/articles-list", articles: @user.articles %>
</div>